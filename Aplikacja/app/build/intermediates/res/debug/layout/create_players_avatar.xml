<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/choose_avek"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textColor="@color/txt_gold"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/next"
        android:id="@+id/nextButton"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/back"
        android:id="@+id/backButton"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:src="@drawable/strz1_tab"
        android:paddingLeft="10dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/imageView4"
        android:src="@drawable/strz2_tab"
        android:paddingRight="10dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView"
        android:src="@drawable/awatar_k1" />
</RelativeLayout><!-- From: file:/C:/Users/kamil_000/AndroidstudioProjects/Milionerki/app/src/main/res/layout/create_players_avatar.xml -->