<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/create_profil"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textColor="@color/txt_gold"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/create_profil_nick"
        android:id="@+id/textView12"
        android:textColor="@color/txt_gold"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/nameText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/createBtn"
        android:id="@+id/createBtn"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/back"
        android:id="@+id/backButton"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/create_profil_name"
        android:id="@+id/textView10"
        android:textColor="@color/txt_gold"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView7"
        android:layout_toRightOf="@+id/createBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/create_profil_srunname"
        android:id="@+id/textView11"
        android:textColor="@color/txt_gold"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView10"
        android:layout_toLeftOf="@+id/nameText" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:shadowColor="@color/fff"
        android:background="@drawable/edit_text_color"
        android:id="@+id/nameText"
        android:layout_above="@+id/textView11"
        android:layout_toRightOf="@+id/textView10"
        android:layout_marginLeft="40dp"
        android:textColor="@color/fff" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_color"
        android:id="@+id/surnameText"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/nameText"
        android:textColor="@color/fff" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/nickText"
        android:background="@drawable/edit_text_color"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/surnameText"
        android:textColor="@color/fff" />

</RelativeLayout><!-- From: file:/C:/Users/kamil_000/AndroidstudioProjects/Milionerki/app/src/main/res/layout/create_players_profil.xml -->